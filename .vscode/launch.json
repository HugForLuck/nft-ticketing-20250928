{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "DEBUG PORTAL",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "PORTAL",
      "postDebugTask": "STOP PORTAL",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/portal",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        // Diese Regel ist entscheidend f√ºr die @shared-Aliase
        "webpack:///../../libs/*": "${workspaceFolder}/libs/*"
      }
    },
    {
      "name": "DEBUG BACKEND",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "BACKEND",
      "postDebugTask": "STOP BACKEND",
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/backend/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "DEBUG",
      "configurations": ["DEBUG PORTAL", "DEBUG BACKEND"],
      "stopAll": true
    }
  ]
}
